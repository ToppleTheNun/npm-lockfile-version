{
  "name": "npm-lockfile-version",
  "version": "0.0.0",
  "description": "NPM lockfile version checker via GitHub actions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ToppleTheNun/npm-lockfile-version.git"
  },
  "author": "Richard Harrah",
  "license": "MIT",
  "private": true,
  "main": "lib/main.js",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src",
    "format-check": "prettier --check src",
    "lint": "eslint src --ext ts",
    "package": "ncc build --source-map --license licenses.txt",
    "prepare": "is-ci || husky install && tsc && ncc build --source-map --license licenses.txt",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@commitlint/prompt-cli": "16.2.3",
    "@types/node": "17.0.9",
    "@typescript-eslint/parser": "5.20.0",
    "@vercel/ncc": "0.33.4",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.5.1",
    "js-yaml": "4.1.0",
    "prettier": "2.6.2",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-pkg": "0.13.0",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "volta": {
    "node": "16.14.1",
    "npm": "8.7.0"
  }
}
